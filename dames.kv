#:kivy 1.11.1

# Conteneur principal qui divise l'écran en deux (plateau et sidebar)
<RootWidget>:
    orientation: 'horizontal'

    # Conteneur pour le plateau de jeu et les coordonnées
    FloatLayout:
        size_hint_x: 0.7  # Le plateau prend 70% de la largeur

        # La grille 8x8 pour les cases du plateau
        GridLayout:
            id: board_layout
            rows: 8
            cols: 8
            size_hint: None, None
            size: self.parent.height, self.parent.height # Assure un plateau carré
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    # La barre latérale
    BoxLayout:
        id: sidebar_layout
        orientation: 'vertical'
        size_hint_x: 0.3  # La sidebar prend 30% de la largeur
        padding: 10
        spacing: 10
        
        canvas.before:
            Color:
                rgba: 150/255, 77/255, 55/255, 1 # Couleur marron (BROWN)
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            text: 'Score'
            font_size: '30sp'
            
        Label:
            id: cream_score_label
            text: 'Cream (You): 0'
            font_size: '20sp'

        Label:
            id: black_score_label
            text: 'Black (AI): 0'
            font_size: '20sp'
            
        Label:
            id: draw_score_label
            text: 'Draws: 0'
            font_size: '20sp'

        Label:
            id: status_label # Pour afficher "AI is thinking..." ou "Game Over"
            text: ''
            font_size: '25sp'
            
        BoxLayout: # Pour les boutons de choix de couleur
            Button:
                id: cream_choice_btn
                text: 'Play as Cream'
            Button:
                id: black_choice_btn
                text: 'Play as Black'
        
        Button:
            text: 'Restart'
            on_press: app.game.reset()